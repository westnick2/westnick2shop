
<div class="col-6 comment">
  <h5>PC:~$ form</h5>
  <hr class="comment">
  <%= form_for @comment, remote: true do |form| %>
    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, { :class => 'form-control' } %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, { :class => 'form-control' } %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_field :body, { :class => 'form-control' }  %>
    </div>

    <div class="field">
      <%= form.label :rate %>
      <%= form.number_field :rate, { :class => 'form-control' } %>
    </div>

    <div>
      <%= form.hidden_field(:stuff_id, :value => session[:stuff_id] )%>
      <%= form.hidden_field(:status, :value => 'false' )%>
    </div>
    <p></p>
    <div class="actions"><%= form.submit('Оставить отзыв', { :class => 'btn btn-link link-side' } ) %></div>
  <% end %>
</div>
